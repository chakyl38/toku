<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Toku</title>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/main.css">
  
</head>
<body>
  <div class="app-container">
  {{--  LEFT MENU  --}}
    <section id="left-menu">
      <div class="account-dropdown">
        <div class="logo">
          <i class="fab fa-typo3"></i>
        </div>
        <div class="name">
          Kyle Chapman
        </div>
        <div class="icon">
          <i class="fas fa-chevron-down"></i>
        </div>
      </div>
      <div class="groups">
        <div class="group">
          <div class="title">Title</div>
          <ul>
            <li>Link</li>
            <li>Link</li>
            <li>Link</li>
          </ul>
        </div>
      </div>
    </section> {{--  END LEFT MENU  --}}

    {{--  CONTENT AREA  --}}
    <section id="content-container">
      <div class="search-header">
        <div class="search-box">
          <input type="text" name="" value="">
          <div class="icon-section">
            <div class="noti">
              <i class="fas fa-bell"></i>
              <div class="noti-number">
                13
              </div>
            </div>
            <div class="comments">
              <i class="fas fa-comment"></i>
              <div class="noti-number">
                3
              </div>
            </div>
            <div class="user">
              <i class="fas fa-user"></i>
              <div class="noti-number active">
                3
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="content-area">
        <section class="compose-section">
          <textarea name="" id="" cols="80" rows="8"></textarea>
          <div class="user-img"></div>
          <div class="buttons">
            <div class="photo-btn button"><i class="fas fa-camera-retro"></i></div>
            <div class="video-btn button"><i class="fas fa-video"></i></div>
            <div class="send-btn button"><i class="fas fa-paper-plane"></i></div>
          </div>
          
        </section>
        <section class="updates">
        
        </section>
      </div>
    </section> {{--  END CONTENT AREA  --}}

    {{--  MESSENGER  --}}
    <section id="messenger">
    
    </section> {{--  END MESSENGER  --}}
    
    
  </div>
  <script src="/js/components/vendor.js"></script>
  <script src="/js/components/firstComp.js"></script>
</body>
</html>
